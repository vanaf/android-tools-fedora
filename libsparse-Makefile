SRCS+= backed_block.c
SRCS+= output_file.c
SRCS+= sparse.c
SRCS+= sparse_crc32.c
SRCS+= sparse_err.c
SRCS+= sparse_read.c
SRCS+= simg2img.c

VPATH+= ../../extras/ext4_utils
SRCS+= ext4fixup.c
SRCS+= allocate.c
SRCS+= contents.c
SRCS+= ext4_utils.c
SRCS+= extent.c
SRCS+= indirect.c
SRCS+= make_ext4fs.c
SRCS+= sha1.c
SRCS+= uuid.c
SRCS+= wipe.c

CPPFLAGS+= -DADB_HOST=1
CPPFLAGS+= -DHAVE_FORKEXEC=1
CPPFLAGS+= -DHAVE_SYMLINKS
CPPFLAGS+= -DHAVE_TERMIO_H
CPPFLAGS+= -D_GNU_SOURCE
CPPFLAGS+= -D_XOPEN_SOURCE
CPPFLAGS+= -I.
CPPFLAGS+= -I./include
CPPFLAGS+= -I../include
CPPFLAGS+= -I../mkbootimg
CPPFLAGS+= -I../../extras/ext4_utils

CFLAGS+= $(RPM_OPT_FLAGS)
LIBS= -lrt -lpthread -lselinux -lz
CC= $(TOOLCHAIN)gcc
LD= $(TOOLCHAIN)gcc

OBJS= $(SRCS:.c=.o)

all: make_ext4fs ext4fixup ext2simg img2simg simg2img simg2simg

make_ext4fs ext4fixup ext2simg img2simg simg2img simg2simg: $(OBJS)
	$(LD) -o $@ $(LDFLAGS) $(OBJS) $(LIBS)

install: all
	install make_ext4fs $(DESTDIR)$(BINDIR)
	install ext4fixup $(DESTDIR)$(BINDIR)
	install ext2simg $(DESTDIR)$(BINDIR)
	install img2simg $(DESTDIR)$(BINDIR)
	install simg2img $(DESTDIR)$(BINDIR)
	install simg2simg $(DESTDIR)$(BINDIR)

clean:
	rm -rf $(OBJS) $(all)
